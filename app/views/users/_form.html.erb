
<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<div class='row'>
  <div class = 'col-xs-12'>
    <%= form_for @user do |f| %>
      <div class="from-group">
        <div class="control-label col-sm-2">
          <%= f.label :UserName%>
        </div>
        <div class="col-sm-11">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
        </div>
      </div>
      <br>
      <div class="from-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-11">
          <%= f.email_field :email ,class: "form-control", placeholder: "Enter email"%>
        </div>
      </div>
      <br>
      <div class="from-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-11">
          <%= f.password_field :password ,class: "form-control", placeholder: "Enter password"%>
        </div>
      </div>
      <br>
      <div class ="abc">
        <div class="form-group">
          <div class="col-sm-10">
          <div class="abcd">
            <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-danger') %>
          </div> 
          </div>
        </div>
         
      </div>
    <% end %>
  </div>
</div>

