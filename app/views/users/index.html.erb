<p style="color: green"><%= notice %></p>
<h2>All Alpha Bloggers</h2>
<br>
<% @users.each do |user| %>
  <ul class="container">
    <div class="center">
      <div class="col-sm-4 d-block mx-auto border" style="background-color:#F5F0E1">
        <br>
        <%= link_to gravatar_for(user), user_path(user) %>
        <div class="article-title">
          <%= link_to user.username, user_path(user), style:"color:#355070" %>
        </div>
        <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
      </div>
    </ul>
  <% end %>
  <div class="col-sm-2 d-block mx-auto ">
    <%= paginate @users %>
  </div>
</div>
