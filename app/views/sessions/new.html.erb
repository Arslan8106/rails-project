<section class="myform-area">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="form-area login-form">
          <div class="form-content">
            <h2>Rails Blog</h2>
            <p>Welcome to login page of Rails Blog App. Login to read articles related to Ruby on Rails Framework.</p>
            <ul>
              <li><a href="https://www.facebook.com/" class="facebook"><i class="fa fa-facebook-f"></i><span>facebook</span></a></li>
              <li><a href="https://www.twitter.com/" class="twitter"><i class="fa fa-twitter"></i><span>twitter</span></a></li>
            </ul>
          </div>
          <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
            <div class="form-input">
            <div class="waviy">
            
              <span class="head1", style="color:#07315B">Login</span>
              <form>
                <div class="form-group">
                  <%= f.email_field :email, placeholder: "Enter Email", autofocus: true %>
                  <label>User Name</label>
                </div>
                <div class="form-group">
                  <%= f.password_field :password , placeholder: "Password", autocomplete: "off" %>
                  <label>password</label>
                </div>
                <div class="myform-button">
                  <%= f.submit "Login" , class: 'myform-btn' %>
                </div>
              </form>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
